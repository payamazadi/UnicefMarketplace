@model IEnumerable<UnicefMarketplace.Models.RegionEvent>

@{
    ViewBag.Title = "Index";
}

<h2>Regional Events</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Region.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventHeadline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Severity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Region.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventHeadline)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Severity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RegionEventId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RegionEventId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RegionEventId })
        </td>
    </tr>
}

</table>
